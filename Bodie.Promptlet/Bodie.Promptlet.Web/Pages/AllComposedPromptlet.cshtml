@page
@using Bodie.Promptlet.Web.Pages
@model AllComposedPromptletModel
@{
    ViewData["Title"] = "Composed Promplets";
 }

<h1>@ViewData["Title"]</h1> 
<hr/>
<dl class="row">
    <dt class="col-md-2"> 
        <a 
            asp-page="./AddComposedPromptlet"
             class="btn btn-sm btn-outline-success">
            New
        </a>
        </dt>
</dl>
<dd class="col-sm-10">
    <table class="table">
        <thead>
        <tr>
            <th>@Html.DisplayName("Name")</th>
            <th>@Html.DisplayName("Description")</th>
            <th>@Html.DisplayName("Version")</th>
            <th>Edit | Delete</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.ComposedPromptlets)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ComposedPromptletName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ComposedPromptletDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ComposedPromptletVersion)
                </td>  
                <td>
                    <div class="btn-group-sm">
                    <a asp-page="./EditComposedPromptlet" class="btn btn-sm btn-outline-dark" asp-route-id="@item.ComposedPromptletId">Edit</a>
                    <a asp-page="./GeneratePrompt" asp-route-id="@item.ComposedPromptletId"  class="btn btn-sm btn-outline-dark">Try it out</a>                                               
                    <a asp-page="./AllComposedPromptlet" class="btn btn-sm btn-outline-dark" onclick="return confirm('Are you sure you want to delete this item?');" 
                    asp-page-handler="Delete" asp-route-id="@item.ComposedPromptletId">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
    </table>
</dd>
