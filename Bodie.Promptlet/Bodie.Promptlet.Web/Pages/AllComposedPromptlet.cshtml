@page
@using Bodie.Promptlet.Web.Pages
@model AllComposedPromptletModel
@{
    ViewData["Title"] = "Composed Promplets";
 }

<h1 style="color:#1ea696;" >@ViewData["Title"]</h1> 
<hr/>
<dl class="row">
    <dt class="col-md-2"> 
        <a 
            asp-page="./AddComposedPromptlet"
             class="btn btn-sm btn-outline-success">
            New
        </a>
        </dt>
</dl>
<dd class="col-sm-10">
    <table class="table table-dark shadow rounded">
        <thead>
        <tr>
            <th>@Html.DisplayName("Name")</th>
            <th>@Html.DisplayName("Description")</th>
            <th>@Html.DisplayName("Version")</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.ComposedPromptlets)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ComposedPromptletName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ComposedPromptletDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ComposedPromptletVersion)
                </td>  
                <td>
                    <div class="btn-group-sm">
                    <a asp-page="./EditComposedPromptlet" 
                    class="btn btn-sm btn-outline-dark" 
                    asp-route-id="@item.ComposedPromptletId"
                    title="Edit">
                <svg style="color:cadetblue;" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
  <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
</svg>
                </a>
                    <a asp-page="./GeneratePrompt" 
                    asp-route-id="@item.ComposedPromptletId"  
                    class="btn btn-sm btn-outline-dark"
                    title="Generate Prompt">
                <svg style="color:#1ea696;" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-terminal-fill" viewBox="0 0 16 16">
  <path d="M0 3a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3zm9.5 5.5h-3a.5.5 0 0 0 0 1h3a.5.5 0 0 0 0-1zm-6.354-.354a.5.5 0 1 0 .708.708l2-2a.5.5 0 0 0 0-.708l-2-2a.5.5 0 1 0-.708.708L4.793 6.5 3.146 8.146z"/>
</svg>
                </a>                                               
                    <a asp-page="./AllComposedPromptlet" 
                    class="btn btn-sm btn-outline-dark" 
                    onclick="return confirm('Are you sure you want to delete this item?');" 
                    asp-page-handler="Delete" 
                    asp-route-id="@item.ComposedPromptletId"
                    title="Delete"
                    >
                   <svg style="color:tomato;" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
  <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
</svg>
                    </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
    </table>
</dd>
